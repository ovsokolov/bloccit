<h2>Sign Up Confirmation</h2>

<h3>Are you sure this values are correct</h3>
<div class="row">
  <div class="col-md-8">
    <div><%= @user.name %></div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div><%= @user.email %></div>
  </div>
</div>
<div class="row">
  <div class="col-md-2">
    <%= button_to "Yes", {controller: "users", action: "create"}, params: params.to_h, class: 'btn btn-success' %>
  </div>
  <div class="col-md-2">
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-failure', method: 'get' %>
  </div>
</div>
