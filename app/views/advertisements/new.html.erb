<div class="container">
  <h1>Enter New Advertisement</h1>
  <div class="row">
    <div class="col-md-4">
      <h3>New Advertisement</h3>
    </div>
    <div class="col-md-8">
      <%= form_for @advertisement do |ad| %>
          <div class="form-group">
            <%= ad.label :title %>
            <%= ad.text_field :title , class: "form-control", placeholder: "Enter Advertisement Title" %>
          </div>
          <div class="form-group">
            <%= ad.label :body %>
            <%= ad.text_area :body , class: "form-control", placeholder: "Enter Advertisement Body" %>
          </div>
          <div class="form-group">
            <%= ad.label :price %>
            <%= ad.text_field :price , class: "form-control", placeholder: "Enter Advertisement Price" %>
          </div>
          <div class="form-group">
            <%= ad.submit "Save", class: "btn btn-default"%>
          </div>
      <% end %>
    </div>
  </div>
</div>
